{
    "cleanUrls": true,
    "redirects": [
        { "source": "/", "destination": "/api/" },
        { "source": "/motion/(.*)", "statusCode": 404, "destination": "/api/motion/404.html" },
        { "source": "/(.*)", "statusCode": 404, "destination": "/api/404.html" }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Strict-Transport-Security",
                    "value": "max-age=31536000; includeSubDomains; preload"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "deny"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ]
}
